{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "virtualMachines_IA_Azure_FGT_P01_name": {
            "defaultValue": "IA-Azure-FGT-P01",
            "type": "String"
        },
        "disks_disk_IA_Azure_FGT_P01_OSDisk_externalid": {
            "defaultValue": "/subscriptions/1e40f91c-69ce-47a5-a027-913d989b6d12/resourceGroups/RG_Networking/providers/Microsoft.Compute/disks/disk_IA-Azure-FGT-P01_OSDisk",
            "type": "String"
        },
        "disks_disk_IA_Azure_FGT_P01_DataDisk_externalid": {
            "defaultValue": "/subscriptions/1e40f91c-69ce-47a5-a027-913d989b6d12/resourceGroups/RG_Networking/providers/Microsoft.Compute/disks/disk_IA-Azure-FGT-P01_DataDisk",
            "type": "String"
        },
        "networkInterfaces_int_IA_Azure_FGT_P01_External_externalid": {
            "defaultValue": "/subscriptions/1e40f91c-69ce-47a5-a027-913d989b6d12/resourceGroups/RG_Networking/providers/Microsoft.Network/networkInterfaces/int_IA-Azure-FGT-P01_External",
            "type": "String"
        },
        "networkInterfaces_int_IA_Azure_FGT_P01_Internal_externalid": {
            "defaultValue": "/subscriptions/1e40f91c-69ce-47a5-a027-913d989b6d12/resourceGroups/RG_Networking/providers/Microsoft.Network/networkInterfaces/int_IA-Azure-FGT-P01_Internal",
            "type": "String"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2022-03-01",
            "name": "[parameters('virtualMachines_IA_Azure_FGT_P01_name')]",
            "location": "australiasoutheast",
            "identity": {
                "type": "SystemAssigned"
            },
            "plan": {
                "name": "fortinet_fg-vm_payg_20190624",
                "product": "fortinet_fortigate-vm_v5",
                "publisher": "fortinet"
            },
            "properties": {
                "hardwareProfile": {
                    "vmSize": "Standard_DS1_v2"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "fortinet",
                        "offer": "fortinet_fortigate-vm_v5",
                        "sku": "fortinet_fg-vm_payg_20190624",
                        "version": "6.4.8"
                    },
                    "osDisk": {
                        "osType": "Linux",
                        "name": "[concat('disk_', parameters('virtualMachines_IA_Azure_FGT_P01_name'), '_OSDisk')]",
                        "createOption": "FromImage",
                        "caching": "ReadWrite",
                        "writeAcceleratorEnabled": false,
                        "managedDisk": {
                            "storageAccountType": "Premium_LRS",
                            "id": "[parameters('disks_disk_IA_Azure_FGT_P01_OSDisk_externalid')]"
                        },
                        "deleteOption": "Detach",
                        "diskSizeGB": 2
                    },
                    "dataDisks": [
                        {
                            "lun": 0,
                            "name": "[concat('disk_', parameters('virtualMachines_IA_Azure_FGT_P01_name'), '_DataDisk')]",
                            "createOption": "Attach",
                            "caching": "None",
                            "writeAcceleratorEnabled": false,
                            "managedDisk": {
                                "storageAccountType": "Premium_LRS",
                                "id": "[parameters('disks_disk_IA_Azure_FGT_P01_DataDisk_externalid')]"
                            },
                            "deleteOption": "Detach",
                            "diskSizeGB": 30,
                            "toBeDetached": false
                        }
                    ]
                },
                "osProfile": {
                    "computerName": "[parameters('virtualMachines_IA_Azure_FGT_P01_name')]",
                    "adminUsername": "admspark",
                    "linuxConfiguration": {
                        "disablePasswordAuthentication": false,
                        "ssh": {
                            "publicKeys": []
                        },
                        "provisionVMAgent": true,
                        "patchSettings": {
                            "patchMode": "ImageDefault",
                            "assessmentMode": "ImageDefault"
                        }
                    },
                    "secrets": [],
                    "allowExtensionOperations": true,
                    "requireGuestProvisionSignal": true
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[parameters('networkInterfaces_int_IA_Azure_FGT_P01_External_externalid')]",
                            "properties": {
                                "primary": true
                            }
                        },
                        {
                            "id": "[parameters('networkInterfaces_int_IA_Azure_FGT_P01_Internal_externalid')]",
                            "properties": {
                                "primary": false
                            }
                        }
                    ]
                },
                "diagnosticsProfile": {
                    "bootDiagnostics": {
                        "enabled": false
                    }
                },
                "priority": "Regular",
                "extensionsTimeBudget": "PT1H30M"
            }
        }
    ]
}